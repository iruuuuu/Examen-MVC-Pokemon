        <?php elseif (empty($pokemon_disponibles)): ?>
            <p>No tienes más Pokémon capturados para añadir a este equipo.</p>
        <?php else: ?>
            <div class="pokemon-grid">
                <?php foreach ($pokemon_disponibles as $pokemon) : ?>
                    <div class="pokemon-card">
