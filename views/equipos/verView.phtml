                            <a href="index.php?c=equipos&action=addPokemon&equipo_id=<?= $equipo->getId() ?>&pokemon_id=<?= $pokemon->getId() ?>" class="btn-create">Añadir</a>
                        </div>
                    </div>
                <?php endforeach; ?>
            </div>
